<core:FragmentDefinition xmlns="sap.m"
	xmlns:exa="org.edu.ui.controls" xmlns:core="sap.ui.core" xmlns:c="sap.ui.core"
	xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:ui="sap.ui"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<Dialog showHeader="false" class="sapUiSizeCompact"
		contentHeight="auto" contentWidth="90%">
		<content>
			<Table id="TaxListTable" mode="SingleSelectMaster" inset="false" items="{/TaxCodesList}">
				<columns>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="Code" />
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="Name" />
					</Column>
				</columns>
				<items>
					<ColumnListItem>
						<cells>
							<Text text="{Code}" />
							<Text text="{Name}" />
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
    <buttons>
        <Button text="Ok" press="handleTaxOk" />
        <Button text="Close" press="handleTaxClose" />
    </buttons>
	</Dialog>

</core:FragmentDefinition>